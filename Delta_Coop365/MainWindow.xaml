<Window x:Class="Delta_Coop365.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delta_Coop365"
        mc:Ignorable="d"
        Title="Coop365 BakeOff" Height="650" Width="850"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="470" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- col 0, row 0-->
        <Label Grid.Column="0" Grid.Row="0" Content="kategorier" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <CheckBox Grid.Column="0" Grid.Row="0" Content="Brød" HorizontalAlignment="Left" Margin="33,57,0,0" VerticalAlignment="Top" FontSize="16"/>
        <CheckBox Grid.Column="0" Grid.Row="0" Content="Kage" HorizontalAlignment="Left" Margin="33,96,0,0" VerticalAlignment="Top" FontSize="16"/>
        <!-- col 1, row 0-->
        <ScrollViewer Grid.Column="1" Grid.Row="0">
            <StackPanel>
                <StackPanel x:Name="BakeOff">
                    <ItemsControl x:Name="ICProducts" ItemsSource="{Binding products}" >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200"/>
                                            <RowDefinition Height="25"/>
                                            <RowDefinition Height="25" />
                                        </Grid.RowDefinitions>
                                        <Border Width="200" Height="200">
                                            <Image Source="{Binding Path=imgPath}" Width="200" Height="200" MouseDown="ProductClick"/>
                                        </Border>
                                        <TextBlock Text="{Binding Path=productName}" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
                                        <TextBlock Text="{Binding Path=price}" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2"/>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <!-- col 0, row 1-->
        <Image Height="NaN" Margin="22,462,22,11" Source="/HomeButton.png" Grid.RowSpan="2" />
        <Label Grid.Row="1" Content="Gå Tilbage til start" HorizontalAlignment="Left" Margin="16,110,0,0" VerticalAlignment="Top"/>
        <!-- col 1, row 1-->
        <Label Grid.Column="1" Grid.Row="1" Content="TOTAL:" HorizontalAlignment="Left" Margin="300,0,0,0" VerticalAlignment="Center" FontSize="24"/>
        <Image Grid.Column="1" Height="NaN" Margin="518,20,10,20" Grid.Row="1" Source="/Basket.png" MouseDown="BasketClick"/>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Width="132" Height="39" Margin="381,36,137,30">
            <TextBlock x:Name="tbTotalAmount" Text="{Binding priceText}" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="132" Height="39" TextAlignment="Center" FontSize="24"/>
        </Border>
    </Grid>
</Window>

    
